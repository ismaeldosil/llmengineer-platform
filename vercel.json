{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build -w @llmengineer/shared && npm run build -w @llmengineer/web",
  "outputDirectory": "apps/web/dist",
  "framework": null,
  "installCommand": "npm install --legacy-peer-deps",
  "rewrites": [
    { "source": "/health", "destination": "/assets/health.json" },
    { "source": "/dashboard", "destination": "/index.html" },
    { "source": "/dashboard/(.*)", "destination": "/index.html" },
    { "source": "/auth/(.*)", "destination": "/index.html" },
    { "source": "/lessons", "destination": "/index.html" },
    { "source": "/lessons/(.*)", "destination": "/index.html" },
    { "source": "/games", "destination": "/index.html" },
    { "source": "/games/(.*)", "destination": "/index.html" },
    { "source": "/profile", "destination": "/index.html" },
    { "source": "/profile/(.*)", "destination": "/index.html" },
    { "source": "/leaderboard", "destination": "/index.html" },
    { "source": "/leaderboard/(.*)", "destination": "/index.html" },
    { "source": "/badges", "destination": "/index.html" },
    { "source": "/:path((?!assets|_expo|favicon).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false
}
