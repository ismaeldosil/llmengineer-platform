{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build -w @llmengineer/shared && npm run build -w @llmengineer/web",
  "outputDirectory": "apps/web/dist",
  "framework": null,
  "installCommand": "npm install --legacy-peer-deps",
  "rewrites": [
    {
      "source": "/health",
      "destination": "/assets/health.json"
    },
    {
      "source": "/((?!assets/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false
}
